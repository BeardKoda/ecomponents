{
  "compilerOptions": {
    "lib": ["DOM", "ES2022"],
    "module": "commonjs",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "outDir": "lib"
  },
  "include": ["src**/*.ts", "src**/*.tsx"]
}
